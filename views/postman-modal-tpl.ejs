<!--添加新的collection模板-->
<script id="create-collection-tpl" type="text/template">
        <form class="form-horizontal">
            <div class="form-group">
                <label for="exist_collections" class="col-sm-4 control-label">Collection Name</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="new-collection-name">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    <div class="checkbox">
                        <span id="create-collection-tip"></span>
                    </div>
                </div>
            </div>
        </form>
</script>

<!--Add to Collection模板-->
<script id="add-har-to-collection-tpl" type="text/template">
    <form class="form-horizontal">
        <div class="form-group">
            <label for="exist_collections" class="col-sm-4 control-label">Exist Collections</label>
            <div class="col-sm-8">
                <select name="method" id="to_select_collection" class="form-control">
                    {@each collections as c}
                    <option value="${c.id}">${c.name}</option>
                    {@/each}
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="new_har_name" class="col-sm-4 control-label">Har name</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="new_har_name" value="${harName}" placeholder="input new har(request) name">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
                <div class="checkbox">
                    <span id="add-har-to-collection-tip"></span>
                </div>
            </div>
        </div>
    </form>
</script>

<script id="edit-collection-tpl" type="text/template">
    <form class="form-horizontal">
        <div class="form-group">
            <label for="readonly_collection_id" class="col-sm-4 control-label">Collection Id</label>
            <div class="col-sm-8">
                <input type="text" readonly class="form-control" id="readonly_collection_id" value="${id}">
            </div>
        </div>
        <div class="form-group">
            <label for="new_collection_name" class="col-sm-4 control-label">Collection name</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="new_collection_name" value="${name}" placeholder="input new collection name">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
                <div class="checkbox">
                    <span id="edit-collection-tip"></span>
                </div>
            </div>
        </div>
    </form>
</script>

<script id="import-collection-tpl" type="text/template">
    <form class="form-horizontal">
        <div class="form-group">
            <label for="readonly_import_collection_id" class="col-sm-3 control-label">Collection Id</label>
            <div class="col-sm-9">
                <input type="text" readonly class="form-control" id="readonly_import_collection_id" value="${id}">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Collection name</label>
            <div class="col-sm-9">
                <input type="text" readonly class="form-control" value="${name}" placeholder="input new collection name">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label">Import</label>
            <div class="col-sm-9">
                <textarea rows="8" class="form-control" id="to_import_content"></textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <div class="checkbox">
                    <span id="import-collection-tip"></span>
                </div>
            </div>
        </div>
    </form>
</script>