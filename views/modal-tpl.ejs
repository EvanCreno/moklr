<!--添加新的collection模板-->
<div class="modal fade" id="createCollectionModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="exampleModalLabel">New Collection</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="new-collection-name" class="control-label">name:</label>
                        <input type="text" class="form-control" id="new-collection-name">
                        <p id="create-collection-tip"></p>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="createCollectionBtn">Save</button>
            </div>
        </div>
    </div>
</div>

<!--Add to Collection模板-->
<script id="add-har-to-collection-tpl" type="text/template">
    <form class="form-horizontal">
        <div class="form-group">
            <label for="exist_collections" class="col-sm-4 control-label">Exist Collections</label>
            <div class="col-sm-8">
                <select name="method" id="to_select_collection" class="form-control">
                    {@each collections as c}
                    <option value="${c.id}">${c.name}</option>
                    {@/each}
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="new_har_name" class="col-sm-4 control-label">Har name</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="new_har_name" value="${harName}" placeholder="input new har(request) name">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
                <div class="checkbox">
                    <span id="add-har-to-collection-tip"></span>
                </div>
            </div>
        </div>
    </form>
</script>

<script id="edit-collection-tpl" type="text/template">
    <form class="form-horizontal">
        <div class="form-group">
            <label for="readonly_collection_id" class="col-sm-4 control-label">Collection Id</label>
            <div class="col-sm-8">
                <input type="text" readonly class="form-control" id="readonly_collection_id" value="${id}">
            </div>
        </div>
        <div class="form-group">
            <label for="new_collection_name" class="col-sm-4 control-label">Collection name</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="new_collection_name" value="${name}" placeholder="input new collection name">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
                <div class="checkbox">
                    <span id="edit-collection-tip"></span>
                </div>
            </div>
        </div>
    </form>
</script>